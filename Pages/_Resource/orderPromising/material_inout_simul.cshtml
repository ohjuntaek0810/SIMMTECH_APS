@page
@model HS.Web.Pages.material_inout_simul
@{
    string CLIENT = Model.Params["CLIENT"].AsString();
    string R = Model.Params["R"].AsString();
    string W = Model.Params["W"].AsString();
    string first_plan_id = Model.Params["first_plan_id"].AsString();
}


<script>
    let first_plan_id = '@first_plan_id';
    // 헤더컬럼 초기값 정의
    const defaultColumns = [
        { dataField: "ORDER_DATE", label: "ORDER_DATE", width: 100, editable: false},
        { dataField: "DIVISION_ID", label: "DIVISION_ID", width: 100, editable: false},
        { dataField: "EVENT_DATE", label: "EVENT_DATE", width: 100, editable: false, type:"date"},
        { dataField: "INOUT_GBN", label: "입출고 구분", width: 120, editable: false },
        { dataField: "INOUT_CATEGORY", label: "입출고 상세 구분", width: 144, editable: false },
        { dataField: "MATERIAL_ITEM_CODE", label: "자재코드", width: 162, editable: false },
        { dataField: "MATERIAL_ITEM_NAME", label: "자재명", width: 284, editable: false },
        { dataField: "MATERIAL_QTY", label: "자재 입출고 수량", width: 120, editable: false, type:"number" },
        { dataField: "REQUEST_ORDER_ID", label: "REQUEST_ORDER_ID", width: 150, editable: false},
        { dataField: "REQUEST_ORDER_DUE_SEQ", label: "REQUEST_ORDER_DUE_SEQ", width: 200, editable: false},
        { dataField: "ITEM_CODE", label: "ITEM_CODE", width: 115, editable: false},
        { dataField: "MODEL_NAME", label: "Model", width: 135, editable: false},
        { dataField: "REVISION", label: "REVISION", width: 100, editable: false},
        { dataField: "LIST_SEQ", label: "LIST_SEQ", width: 106, editable: false},
        { dataField: "CUMUL_BALANCE_QTY", label: "누적과부족 수량", width: 135, editable: false, type:"number"}
    ];

    $hs.handler = {
        "btn_reset" : {
            click: function() {
                // 값 초기화
                $hs.$("pnlSearch").reset();
            }
        },
        "btnSearch": {
            click: function () {

                let toServer = {};
                toServer["terms"] = $hs.$("pnlSearch").val();

                console.log(toServer);

                $hs.fetch({
                    command: "search",
                    param: toServer
                }).then(fromServer => {
                    $hs.$("grid").data(fromServer["data"]);
                    $('#total_cnt').text('(Total Count:' + fromServer["data"].length + ')');
                }).catch(e => $hs.errorBox(e))
            }
        },
        "btn_grid_save": {
            click: function() {
                // 프로시져 PR_OM_MATERIAL_SIMUL 연결
                $hs.fetch({
                    command: "simul"
                }).then(fromServer => {
                    console.log(fromServer["data"]);
                    if(fromServer["data"]) {
                        alert("시뮬레이션 성공");
                    } else {
                        alert("시뮬레이션 실패");
                    }
                }).catch(e => $hs.errorBox(e))
            }
        },
        "btn_excel_download": {
            click : function() {
                $hs.util.$CommonUtil.excelDownload("grid", "자재입출고 시뮬레이션");
            }
        },
        "btn_grid_setting" : {  // dimension 세팅
            click : function() {
                // 그리드 세팅 modal open
                // param : modal_id, grid_id, dimension_grid_id
                $hs.util.$CommonUtil.openGridSettingModal("modalDialog", "grid", "dimension_grid");
            }
        },
        "btnSave_dimension" : { // dimension 변경내용 저장
            click : function() {
                $hs.util.$CommonUtil.saveGridSetting("modalDialog", "grid", "dimension_grid", defaultColumns);

                
            }
        },
        "grid" : {
            contextHeaderClick: function (data) {
                $hs.util.$CommonUtil.getHeaderContextClick(data);
            },
            headerFormat: function (data) {
                data.cell.css("text-align", "center");
            }
        },
        "group_id" : {
            change : function(data){
                let division_id = data.value;

                $hs.html.select.init({
                    id: "group_gubun",
                    dataurl: "/api/data/GROUP_GUBUN?DIVISION_ID=" + division_id,
                    valueMember: "CODE",
                    displayMember: "NAME",
                    val: ""
                });

                $hs.html.select.init({
                    id: "bottle_neck_name",
                    dataurl: "/api/data/BOTTLE_NECK?DIVISION_ID=" + division_id,
                    valueMember: "CODE",
                    displayMember: "NAME",
                    val: ""
                });
            }
        },
        "group_gubun" : {
            change : function(data){
                let group_gubun_name = data.value;

                $hs.html.select.init({
                    id: "bottle_neck_name",
                    dataurl: "/api/data/BOTTLE_NECK?GROUP_GUBUN_NAME=" + group_gubun_name,
                    valueMember: "CODE",
                    displayMember: "NAME",
                    val: ""
                });
            }
        },
                
        // "btn_winopen_DAILY_CAPA_CALC": {
        //     click : function() {
        //        $hs.$("modal_DAILY_CAPA_CALC").open();
        //     }
        // }
        // ,
        "btnSave_DAILY_CAPA_CALC": {
            click : function() {

               let toServer = {};
               let Terms = {};
               Terms["PLAN_ID"] =  $hs.$("DAILY_CAPA_PLAN_ID").val();;
               toServer["Terms"] = Terms

               $hs.fetch({
                    command: "EXEC_PR_OM_DAILY_CAPA_CALC",
                    param: toServer
               }).then(fromServer => {
                     if(fromServer["RESULT_PARAMS"]["RTN"] =="OK")
                    {
                      alert("실행이 완료 되었습니다.");
                      $hs.$("modal_DAILY_CAPA_CALC").close();
                    }

               }).catch(e => $hs.errorBox(e))

            }
        }
    }

    $hs.load(() => {
        // 현재 localStorage에 저장된 메뉴 ID 가져옴
        var curMenuId = localStorage.getItem("curMenuId"); 
        // 즐겨찾기 여부 체크 후 버튼 리스너 추가
        $hs.util.$CommonUtil.checkFavorite(curMenuId);

        // search
        $hs.ui.button.init({ id: "btnSearch", class: ["smart-btn", "btn-search"] });

        // grid save
        $hs.ui.button.init({ id: "btn_grid_save", enabled: @W });

        // excel download
        $hs.ui.button.init({ id: "btn_excel_download"});
          
        // panel
        $hs.html.panel.init({ id: "pnlSearch" });

        // grid setting
        $hs.ui.button.init({ id: "btn_grid_setting"});
        $hs.ui.button.init({ id: "btnSave_dimension"});

        // grid
        $hs.dx.grid.init({
            id: "grid",
            width: "100%",
            height: "100%",
            sortable: true,
            selectMode: "single",
            rownumber: false,
            filterable: true,
            editable: true,
            handler: true,
            reOrdering: true, // 컬럼 재배치 여부
            headerContextmenu : ["Sort Asc", "Sort Desc", "Sort Clear", "Fixed", "Unfixed", "Hide", "Hide Clear",
                {
                    menu : "CAL",
                    child : [
                        "Count",
                        "Avg",
                        "Max",
                        "Min",
                        "Sum",
                        "Std. Div"
                    ]
                }
            ],
        })

        // 그리드 컬럼가져오기
        // 1. id로 사용할 grid_id(js용)
        // 2. 초기화용 컬럼들 (LIST)
        // <div id="grid" data-grid-id="RESOURCE_GRID"></div>
        $hs.util.$CommonUtil.getGridSetting("grid", defaultColumns);

        const _instance = $hs.$("grid")._instance;
        // 컬럼 라인 그리기
        _instance.option('showColumnLines', true);
        _instance.option('rowAlternationEnabled', false);
        _instance.option('showBorders', true);
        _instance.option('scrolling', {
            showScrollbar: 'always',
            useNative: true
        });

        // demension grid
        $hs.dx.grid.init({
            id: "dimension_grid",
            width: "100%",
            height: "300px",
            sortable: true,
            selectMode: "single",
            dragRow: true,
            rownumber: false,
            filterable: false,
            editable: true,
            handler: true,
        }).columns(col => {
            col.add({ dataField: "dataField", label: "dataField", width: 200, editable: false, visible:false })
            col.add({ dataField: "editable", label: "editable", width: 200, editable: false, visible:false })
            col.add({ dataField: "name", label: "NAME", width: 200, editable: false })
            col.add({ dataField: "visible", label: "VISIBLE", width: 80, editable: true, type: "boolean" })
            col.add({ dataField: "width", label: "WIDTH", width: 80, editable: true })
            col.add({ dataField: "fix", label: "FIX", width: 80, editable: true, type: "boolean" })
        });

        $hs.html.select.init({
            id: "group_id",
            dataurl: "/api/data/DIVISION_LIST_NOT_IN_ALL",
            valueMember: "CODE",
            displayMember: "NAME",
            val: "SPS"
        });
        
        // 팝업
        $hs.html.$popup.init('modalDialog');

        $hs.html.input.initAll();

           // 팝업
        $hs.html.$popup.init('modal_DAILY_CAPA_CALC');

        //DAILY_CAPA_CALC 팝업창 안에 Plan ID콤보박스
        $hs.html.select.init({
            id: "DAILY_CAPA_PLAN_ID",
            dataurl: "/api/data/PLAN_ID",
            valueMember: "PLAN_ID",
            displayMember: "PLAN_ID",
            val: first_plan_id
        });

    });

</script>

